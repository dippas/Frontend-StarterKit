{
	"env": {
		"browser": true,
		"es2020": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "script"
	},
	"rules": {
		"semi": [1, "never"],
		"lines-around-comment": 1,
		"no-multiple-empty-lines": [1, {
			"max": 1,
			"maxBOF": 0,
			"maxEOF": 0
		}],
		"camelcase": 2,
		"indent": [2, "tab", {
			"SwitchCase": 1
		}],
		"quotes": [2, "single", {
			"avoidEscape": true
		}],
		"no-redeclare": 2,
		"no-var": 2,
		"func-style": [2, "declaration", {
			"allowArrowFunctions": true
		}],
		"comma-dangle": [2, "never"],
		"object-curly-spacing": [2, "always"],
		"arrow-spacing": [2, {
			"before": true,
			"after": true
		}],
		"array-bracket-newline": [2, "never"],
		"no-extra-parens": [2, "all", {
			"returnAssign": false
		}],
		"comma-spacing": [2, {
			"before": false,
			"after": true
		}],
		"no-template-curly-in-string": 2,
		"no-eval": 2,
		"space-infix-ops": [2, { 
			"int32Hint": false 
		}]
	}
}